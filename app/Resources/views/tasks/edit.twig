<!-- Modal -->
<form action="#" method="post" autocomplete="off">
    <div class="modal fade"
         id="task_edit_modal"
         tabindex="-1"
         v-if="editingTask !== null"
         role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button"
                            class="close"
                            data-dismiss="modal">
                    </button>
                    <h4 class="modal-title" id="task_edit_modal_title">
                        Edytuj zadanie
                    </h4>
                </div>
                <input type="hidden"
                       id="task_id"
                       v-model="editingTask.task_id"
                       name="task_id">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title">Nazwa zadania</label>
                        <input type="text"
                               class="form-control"
                               id="title"
                               name="title"
                               v-model="editingTask.title"
                               v-html="editingTask.title"
                               required>
                    </div>
                    <div class="form-group">
                        <label for="details">Opis zadania</label>
                        <textarea class="form-control"
                                  rows="5"
                                  id="details"
                                  v-model="editingTask.details"
                                  name="details"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="status">Status:</label>
                        <select class="form-control"
                                id="type"
                                v-model="editingTask.type"
                                name="type">
                            <option
                                    v-for="column in columns"
                                    :value="column.type"
                                    v-html="column.name"></option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            role="button"
                            @click="deleteTask()"
                            class="btn btn-danger">
                        Usu≈Ñ to zadanie
                    </button>
                    <button type="button"
                            role="button"
                            @click="editTask()"
                            class="btn btn-success">
                        Zapisz zadanie
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
